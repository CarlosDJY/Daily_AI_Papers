{
  "arxiv": {
    "categories": [
      "cs.AI",
      "cs.LG",
      "cs.CL"
    ],
    "days_back": 2,
    "max_results": 100
  },
  "huggingface": {
    "api_url": "https://huggingface.co/api/daily_papers",
    "timeout": 10,
    "bonus_score": 0.1
  },
  "recommender": {
    "model_name": "all-MiniLM-L6-v2",
    "top_k": 5,
    "hf_bonus_score": 0.1,
    "ema_alpha": 0.1,
    "initial_keywords": [
      "Large Language Models"
    ]
  },
  "scheduler": {
    "collect_time": "06:00",
    "send_time": "08:00",
    "timezone": "Asia/Shanghai"
  },
  "email": {
    "subject": "今日 AI 论文简报 - {date}",
    "retry_times": 3,
    "retry_delay": 60,
    "recipient_emails": []
  },
  "dify": {
    "enabled": true,
    "base_url": "http://localhost:80/v1",
    "workflow_id": "",
    "timeout": 300,
    "concurrency": 3,
    "retries": 2,
    "retry_delay": 5
  },
  "mineru": {
    "enabled": true,
    "base_url": "http://10.14.92.66:5050",
    "timeout": 600,
    "concurrency": 3
  },
  "web": {
    "host": "127.0.0.1",
    "port": 8000,
    "base_url": "http://127.0.0.1:8000"
  },
  "static_site": {
    "enabled": true,
    "output_dir": "../Daily_AI_Papers/docs",
    "web_base_url": "https://carlosdjy.github.io/Daily_AI_Papers/",
    "git_repo_path": "../Daily_AI_Papers",
    "git_remote": "git@github.com:CarlosDJY/Daily_AI_Papers.git",
    "auto_deploy": true
  }
}